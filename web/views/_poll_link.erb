<% if current_path != '' %>
  <% if params[:poll] %>
    <a id="live-poll" class="btn btn-primary active" href="<%= frontkiq_path + current_path %>"><%= t('StopPolling') %></a>
  <% else %>
    <a id="live-poll" class="btn btn-primary" href="<%= frontkiq_path + current_path %>?<%= qparams(poll: true) %>"><%= t('LivePoll') %></a>
  <% end %>
<% end %>
