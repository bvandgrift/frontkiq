%ul.list-unstyled.summary.row
  %li.processed.col-sm-1
    %span.count= number_with_delimiter(stats.processed)
    %span.desc= t('Processed')
  %li.failed.col-sm-1
    %span.count= number_with_delimiter(stats.failed)
    %span.desc= t('Failed')
  %li.busy.col-sm-1
    %a{:href => frontkiq_busy_workers_path}
      %span.count= number_with_delimiter(workers.size)
      %span.desc= t('Busy Workers')
  %li.enqueued.col-sm-1
    %a{:href => frontkiq_queued_jobs_path}
      %span.count= number_with_delimiter(stats.enqueued)
      %span.desc= t('Queued Jobs')
  %li.retries.col-sm-1
    %a{:href => frontkiq_pending_retries_path}
      %span.count= number_with_delimiter(stats.retry_size)
      %span.desc= t('Pending Retries')
  %li.scheduled.col-sm-1
    %a{:href => frontkiq_scheduled_jobs_path}
      %span.count= number_with_delimiter(stats.scheduled_size)
      %span.desc= t('Scheduled Jobs')
  %li.dead.col-sm-1
    %a{:href => frontkiq_abandoned_jobs_path}
      %span.count= number_with_delimiter(stats.dead_size)
      %span.desc= t('Abandoned Jobs')
