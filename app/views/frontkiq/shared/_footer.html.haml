.navbar.navbar-fixed-bottom.navbar-inverse
  .navbar-inner
    .container.text-center
      %ul.nav
        %li
          %p.navbar-text{:style => "color:white;"}= Frontkiq::VERSION
        %li
          %p.navbar-text.redis-url
            Redis: #{redis_connection}
